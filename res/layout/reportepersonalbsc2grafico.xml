<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/reporteperbscTitulografico"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:gravity="left" 
        android:layout_marginLeft="30dp"
		android:layout_marginTop="10dp" >
    </TextView>
    
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >
     
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:id="@+id/reporteperbscsDisplayfecha"
	        />
	    
	    <Button
	        android:id="@+id/reporteperbscsActualizar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp"
	        android:text="Refrescar"

	         />
		<ProgressBar
        android:id="@+id/reporteperbscprogressbarRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:indeterminate="true"/>
     </LinearLayout>
    
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >
    
    <Spinner
	        android:id="@+id/reporteperbscspinnerGraf"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp" />
    
    <Button
        android:id="@+id/reporteperbscbtnDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver detalle"
        android:layout_marginLeft="200dp" />
    
    </LinearLayout>
    
    <WebView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/reporteperbscWebkit"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    
    

</LinearLayout>