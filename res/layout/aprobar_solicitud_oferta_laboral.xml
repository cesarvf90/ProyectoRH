<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/reclut_contactos_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/reclut_contactos_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/reclut_validar_solic_of_lab_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reclu_solicitudes_oferta_laboral_detalle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/Title"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/reclut_lista_solicit_of_laboral"
        android:layout_width="350px"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/reclut_contactos_title_layout" >
    </ListView>

    <LinearLayout
        android:id="@+id/reclut_detalle_contacto_part"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reclut_contactos_title_layout"
        android:layout_toRightOf="@+id/reclut_lista_solicit_of_laboral"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Área:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargo:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Publicación:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modo de Publicación:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Responsable:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:text="Comentarios:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:text="Observación:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/reclu_btn_Validar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    
                    android:text="Aprobar" />

                <Button
                    android:id="@+id/reclu_btn_Rechazar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rechazar" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/reclut_area_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_cargo_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_fecha_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_modo_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_responsable_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_comentarios_input"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:ems="10"
                android:textSize="24sp" >
            </TextView>

            <EditText
                android:id="@+id/reclut_observacion_input"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:editable="false"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textSize="24sp" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>