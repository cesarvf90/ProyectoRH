<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:text="Cubrimiento de vacantes laborales por universidad"
         android:textSize="30sp"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="10dp"
		android:id="@+id/reportecub1titulo"/>
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:background="@color/verde_menubar"
    android:layout_marginTop="60dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp" 
    >
   

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:text="Opciones"
        android:textColor="@color/white"
        android:layout_marginTop="5dp" />
    
     </RelativeLayout>
     
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_marginTop="120dp"
	    android:layout_marginLeft="30dp" >
    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="Seleccione Area" />
	    
	    <Spinner
	        android:id="@+id/reportecubspinnerArea"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp" />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="Seleccione puesto" 
	        android:layout_marginLeft="30dp"/>
	    
	    <Spinner
	        android:id="@+id/reportecubspinnerPuesto"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp" />
    
    </LinearLayout>


    
     <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_marginTop="180dp"
	    android:layout_marginLeft="30dp" >
    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="Desde" />
	    <TextView
	        android:id="@+id/reportecubdesde"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:layout_marginLeft="30dp"
	        android:text="17/06/2013" />
	    
	    <Button
        android:id="@+id/reportecubbtndesde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sel."
        android:layout_marginLeft="30dp" />
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="Hasta" 
	        android:layout_marginLeft="120dp"/>
	    <TextView
	        android:id="@+id/reportecubhasta"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:layout_marginLeft="30dp"
	        android:text="17/06/2013" />
	    
	    <Button
        android:id="@+id/reportecubbtnhasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sel."
        android:layout_marginLeft="30dp" />
    
    </LinearLayout>
    
    
    
    <Button
        android:id="@+id/reportecubbtnConsultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"  />

    
</RelativeLayout>