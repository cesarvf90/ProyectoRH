<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >	
  	
    <LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Seleccione Subordinado: " />
	
	   	<Spinner
			android:id="@+id/spinnerMisSubordinados"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
	</LinearLayout>   	
	
  	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Objetivo Padre: " />
    	
	    <Spinner
			android:id="@+id/spinnerObjsPadre"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
	</LinearLayout>
	
  	<TableLayout
            android:orientation="vertical"
            android:id="@+id/objsHijosMonitoreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >					
    </TableLayout>
    
    <LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center_horizontal">
	    
	         <Button
		        android:id="@+id/MisObjsDescCambiosMon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Descartar Cambios" />
		    
		     <Button
		        android:id="@+id/MisObjsGuardarCambiosMon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Guardar Cambios" />
	    
    </LinearLayout>	

</LinearLayout>