<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Seleccione PerÃ­odo: " />
	
	   	<Spinner
			android:id="@+id/spinnerMisObjsPeriodo"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
	</LinearLayout>   	
  	
  	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Objetivo Padre: " />
    	
	    <Spinner
			android:id="@+id/spinnerMisObjsObjetivo"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
	</LinearLayout>
	
  	<TableLayout
            android:orientation="vertical"
            android:id="@+id/objsHijos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >					
    </TableLayout>
    
    <LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center_horizontal">
	    
	         <Button
		        android:id="@+id/MisObjsDescCambios"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Descartar Cambios" />
		    
		     <Button
		        android:id="@+id/MisObjsGuardarCambios"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Guardar Cambios" />
	    
    </LinearLayout>	
    
    <ExpandableListView
        android:id="@+id/listaObjetivos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ExpandableListView>

</LinearLayout>