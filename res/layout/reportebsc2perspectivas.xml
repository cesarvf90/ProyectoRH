<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:id="@+id/reportebscPeriodoselec"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
		android:layout_marginTop="10dp" />
    
	<GridView 
	    android:id="@+id/reportebscgridPerspectivas"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:horizontalSpacing="0dp"
	    android:numColumns="2"
	    android:layout_marginTop="130dp" 
	    android:padding="0dp"
	    android:paddingBottom="0dp"
	    android:paddingLeft="0dp"
	    android:paddingRight="0dp"
	    android:paddingTop="0dp"
	    android:stretchMode="columnWidth"
	    android:verticalSpacing="0dp" 
	    >
	
	</GridView>
	
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="60dp" >
     
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:id="@+id/reportebscsDisplayfecha"
	        />
	    
	    <Button
	        android:id="@+id/reportebscsActualizar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="30dp"
	        android:text="Refrescar"

	    />
	    
	    <ProgressBar
        android:id="@+id/reportebscprogressbarRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:indeterminate="true"/>
     </LinearLayout>

</RelativeLayout>