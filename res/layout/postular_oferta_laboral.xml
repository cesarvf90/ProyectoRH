<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/reclut_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="50px"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/reclut_contactos_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/reclut_postular_lab_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reclu_solicitudes_oferta_laboral_detalle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/Title"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/reclut_lista_solicit_of_laboral"
        android:layout_width="280px"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/reclut_title_layout" >
    </ListView>

    <LinearLayout
        android:id="@+id/reclut_detalle_contacto_part"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reclut_title_layout"
        android:layout_toRightOf="@+id/reclut_lista_solicit_of_laboral"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Área:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_cargo_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puesto:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nro. Vacantes:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sueldo Tentativo:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Requerimiento:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Límite Solicitud:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Convocatoria:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Responsable:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:text="Descripción:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/reclu_btn_Validar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postular" />
                
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/reclut_area_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_cargo_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_nro_vacantes_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_sueldo_tentativo_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_fecha_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@android:color/black"
                android:textSize="24sp" />
            
            <TextView
                android:id="@+id/reclut_fecha_limite_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_modo_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_responsable_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/reclut_descripcion_input"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:ems="10"
                android:text="  "
                android:textSize="24sp">
                
            </TextView>
            
            
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>