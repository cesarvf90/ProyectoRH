<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/mi_info_contactos_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contactos_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detalleContacto_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/Title"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/mi_info_contactos_list"
        android:layout_width="550px"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mi_info_contactos_title_layout" >
    </ListView>

    <LinearLayout
        android:id="@+id/mi_info_detalle_contacto_part"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/mi_info_contactos_title_layout"
        android:layout_toRightOf="@+id/mi_info_contactos_list"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Nombres:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Apellidos:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Área:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Puesto:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Fecha ingreso:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Correo electrónico:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Teléfono:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Nombres:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Apellidos:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Área:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Puesto:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Fecha ingreso:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Correo electrónico:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Teléfono:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>